@model AlterarSenhaModel
@{
    ViewData["Title"] = "Alterar senha";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-fechar" role="alert">
        <button type="button" class="btn btn-danger btn-fechar close"><b>X</b></button>
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-fechar" role="alert">
        <button type="button" class="btn btn-danger btn-fechar close"><b>X</b></button>
        @TempData["MensagemErro"]
    </div>
}
<div class="text-center">
    <h1 class="display-4">Alterar Senha do Usuário</h1>
</div>
<div class="container-xl mt-5 mb-5">

    <div class="d-flex justify-content-center border bg-light" style="padding:7px; box-shadow:0px 0px 4px 2px black">
        <form asp-controller="AlterarSenha" asp-action="Alterar" method="post">
            <div class="card mt-4 mb-3 text-dark">
                <div class="card-body">
                    <label for="senhaAtual">Senha atual</label>
                    <input type="password" class="form-control" asp-for="SenhaAtual"/>
                    @Html.ValidationMessageFor(x => x.SenhaAtual)
                    <br/>
                    <label for="novaSenha">Nova Senha</label>
                    <input type="password" class="form-control" asp-for="NovaSenha"/>
                    @Html.ValidationMessageFor(x => x.NovaSenha)
                    <br/>
                    <label for="confirmarNovaSenha">Confirme nova senha</label>
                    <input type="password" class="form-control" asp-for="ConfirmarNovaSenha" />
                    @Html.ValidationMessageFor(x => x.ConfirmarNovaSenha)
                    <br />
                    <button type="submit" class="btn btn-success w-100">Alterar</button>
                    <br />
                    <a role="button" class="btn btn-outline-primary w-100" asp-controller="GerenciarCadastro" asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>