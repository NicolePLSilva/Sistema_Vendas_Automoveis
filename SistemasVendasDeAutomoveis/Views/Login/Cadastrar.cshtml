@model CadastroModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-fechar" role="alert">
        <button type="button" class="btn btn-danger btn-fechar close"><b>X</b></button>
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-fechar" role="alert">
        <button type="button" class="btn btn-danger btn-fechar close"><b>X</b></button>
        @TempData["MensagemErro"]
    </div>
}

<div class=" container  mt-5 mb-5 w-25 text-dark">
    <div class=" altCadastro bg-light" style="padding:10px; box-shadow:0px 0px 4px 2px black; min-height:300px; min-width:260px">
        <div class="card-header text-center">
            <h5 class="display-5">Criar Conta</h5>
        </div>
        <br />
        <div class="card-body">
            <form asp-controller="Login" asp-action="Cadastrar" method="post">
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite Nome">
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>
                <div class="form-group">
                    <label for="sobrenome">Sobrenome</label>
                    <input type="text" asp-for="Sobrenome" class="form-control" placeholder="Digite Sobrenome">
                    @Html.ValidationMessageFor(x => x.Sobrenome)
                </div>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Digite email de login">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="form-group">
                    <label for="celular">Celular</label>
                    <input type="text" asp-for="Celular" class="form-control"
                           placeholder="Celular de contato" data-mask="(00) 00000-0000">
                    @Html.ValidationMessageFor(x => x.Celular)
                </div>
                <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" asp-for="Senha" class="form-control" placeholder="Insira uma senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <div class="form-group">
                    <label for="confirmarSenha">Confirme a senha</label>
                    <input type="password" asp-for="ConfirmarSenha" class="form-control" placeholder="Confirme a senha">
                    @Html.ValidationMessageFor(x => x.ConfirmarSenha)
                </div>
                <br />

                <button type="submit" class="btn btn-success w-100">Registrar</button>
                <p>Já possui uma conta? <a asp-controller="Login" asp-action="Index"><b>Entrar</b></a></p>
            </form>
        </div>
    </div>

</div>


