@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success alert-fechar" role="alert">
        <button type="button" class="btn btn-danger btn-fechar close"><b>X</b></button>
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-fechar" role="alert">
        <button type="button" class="btn btn-danger btn-fechar close"><b>X</b></button>
        @TempData["MensagemErro"]
    </div>
}

<div class=" container  mt-5 mb-5 w-25 text-dark" >
    <div class=" altLogin  bg-light" style="display:block; padding:10px; box-shadow:0px 0px 4px 2px black; min-height:300px; min-width:260px">
        <div class="card-header text-center">
            <h5 class="display-5">Login</h5>
        </div>
        <br/>
        <div class="card-body">
            <form asp-controller="Login" asp-action="Entrar" method="post">
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Digite email de login">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="form-group">
                    <label for="senha">Senha</label>
                    <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <br />
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="continuarConectado">Continuar conectado</label>
                </div>
                <p>Esqueceu sua senha? <a asp-controller="Login" asp-action="Redefinir"><b>Redefinir senha</b></a></p>
                <br />
                <button type="submit" class="btn btn-success w-100">Entrar</button>
                <p>Não possue cadastro? <a asp-controller="Login" asp-action="Cadastrar"><b>Registrar</b></a></p>
            </form>
        </div>
    </div>  
</div>

                
